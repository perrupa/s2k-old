<p id="notice"><%= notice %></p>
<span id="breadcrumb">
	<%= link_to "Home", root_path %> >
	<%= link_to "Videos", videos_path %> >
	<%= @video.title %>
</span>

<h1><%= @video.title %></h1>

<%= @video.to_html(390, 640) %>
	
<div id="videoDescription">
	<b>Description:</b>
	<p><%= @video.description %></p>

	<%= facebook_like %>
</div>

<h3>Crews</h3>
<%= render "crewList" %>

<% if user_signed_in? %>
	<%= render "participantForm", :locals => { :video => @video } %>
<% end %>

<%= link_to "Edit", edit_video_path(@video) if user_signed_in? %>


