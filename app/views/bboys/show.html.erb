<ul class="breadcrumb">
	<li><%= link_to "BBoys", bboys_path %><span class="divider">/</span></li>
	<li><%= @bboy.bboyName %></li>
</ul>

<div class="page-header">
	<h1>
		<%= @bboy.bboyName %>
		<small>
			<% if(@bboy.crews.count > 0)%>
				(<%= @bboy.crews.uniq.collect{|c| link_to c.name, c}.join(" / ").html_safe %>)
			<% else %>
				<em>Independent</em>
			<% end %>
		</small>
	</h1>
</div>

<%if(! notice.nil?)%>
<div class="row">
	<div class="span14 offset1">
		<div class="alert-message warning">
  			<a class="close" href="#">Ã—</a>
			<p><%= notice %></p>
		</div>
	</div>
</div>
<% end %>

<div class="row">
	<div class="span14 offset1">
		<% if !(@bboy.name.blank?) %>
		<p>
		  <b>Full Name:</b> <%= @bboy.name %>
		</p>
		<% end %>


		<% if @bboy.battled_with.size > 0 %>
			<h3>Has Battled with</h3>
				<%= @bboy.battled_with.collect{|c| link_to c.name, c}.to_sentence.html_safe %>
		<% end %>


		<h3>Videos</h3>
		<% if @bboy.videos.count == 0%>
			<em>None</em>
		<% else %>
			<ul>
				<% @bboy.videos.uniq.each do |video| %>
					<li><%= link_to youtube_thumbnail(video), video%> <%= link_to video.title, video%></li>
				<% end %>
			</ul>
		<% end %>

	</div>
</div>